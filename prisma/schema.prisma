generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Student {
  id        Int            @id @default(autoincrement())
  firstName String
  lastName  String
  class_id  Int
  class     Class          @relation(fields: [class_id], references: [id])
  groups    StudentGroup[]
}

model Class {
  id       Int       @id @default(autoincrement())
  name     String
  students Student[]
}

model Group {
  id       Int            @id @default(autoincrement())
  name     String
  students StudentGroup[]
}

model StudentGroup {
  student_id Int // relation scalar field (used in the `@relation` attribute above)
  student    Student @relation(fields: [student_id], references: [id])
  group_id   Int // relation scalar field (used in the `@relation` attribute above)
  group      Group   @relation(fields: [group_id], references: [id])

  @@id([student_id, group_id])
}
